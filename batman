#!/bin/sh
cat << "EOF"
       _,     _   _     ,_
   .-'` /     \'-'/     \ `'-.
  /    |      |   |      |    \
 ;      \_  _/     \_  _/      ;
|         ``         ``         |
EOF
echo -n "|              ";
acpi | grep '[0-9 ][0-9]%' -o | head -1 | tr -d '\n'
echo "              |";
cat << "EOF"
|                               |
 ;    .-.   .-.   .-.   .-.    ;
  \  (   '.'   \ /   '.'   )  /
   '-.;         V         ;.-'
EOF
